<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Account_Number">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">


    <TextView
        android:id="@+id/bank1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bank Account Details"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:textColor="#111"
        android:textSize="18dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/bank2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:text="The amount will be transferred to the bank detais given below"
        android:layout_below="@+id/bank1"
        android:layout_marginLeft="15dp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"/>


    <TextView
        android:id="@+id/bank3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:text="Full name as in Bank Account"
        android:layout_below="@+id/bank2"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:textSize="18dp"
        android:textColor="#111"
        android:textStyle="bold"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/outlinedTextField"
            android:theme="@style/EditTextThemeOverlay"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:hint="Enter Your Name"
            android:textColorHint="#1396FD"
            app:helperText="Default helper"
            app:helperTextTextAppearance="@style/HelperTextAppearance"
            app:errorTextAppearance="@style/ErrorTextAppearance">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:singleLine="true"
                android:id="@+id/editTextUsername"
                android:layout_height="70dp"
                android:layout_marginBottom="10dp"
                android:paddingTop="20dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:textColorHighlight="#111"
                app:backgroundTint="#fff" />

        </com.google.android.material.textfield.TextInputLayout>




    <TextView
        android:id="@+id/bank4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Account Number"
        android:layout_below="@+id/outlinedTextField"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:textSize="18dp"
        android:textColor="#111"
        android:textStyle="bold"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/outlinedTextField1"
            android:theme="@style/EditTextThemeOverlay"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:hint="Enter Account Number"
            app:passwordToggleEnabled="true"
            android:textColorHint="#1396FD"
            app:helperText="Default helper"
            app:helperTextTextAppearance="@style/HelperTextAppearance"
            app:errorTextAppearance="@style/ErrorTextAppearance">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:singleLine="true"
                android:id="@+id/editTextUsername1"
                android:inputType="textPassword"
                android:layout_height="70dp"
                android:layout_marginBottom="10dp"
                android:paddingTop="20dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:textColorHighlight="#111"
                app:backgroundTint="#fff" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/outlinedTextField2"
            android:theme="@style/EditTextThemeOverlay"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:hint="Re - Enter Account Number"
            android:textColorHint="#1396FD"
            app:helperText="Default helper"
            app:helperTextTextAppearance="@style/HelperTextAppearance"
            app:errorTextAppearance="@style/ErrorTextAppearance">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:singleLine="true"
                android:id="@+id/editTextUsername2"
                android:layout_height="70dp"
                android:inputType="number"
                android:layout_marginBottom="10dp"
                android:paddingTop="20dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:textColorHighlight="#111"
                app:backgroundTint="#fff" />

        </com.google.android.material.textfield.TextInputLayout>





    <TextView
        android:id="@+id/bank5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IFSC Code"
        android:layout_below="@+id/outlinedTextField2"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:textSize="18dp"
        android:textColor="#111"
        android:textStyle="bold"/>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/outlinedTextField3"
            android:theme="@style/EditTextThemeOverlay"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:hint="Enter IFSC Code"
            android:textColorHint="#1396FD"
            app:helperText="Default helper"
            app:helperTextTextAppearance="@style/HelperTextAppearance"
            app:errorTextAppearance="@style/ErrorTextAppearance">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:singleLine="true"
                android:id="@+id/editTextUsername3"
                android:layout_height="70dp"
                android:layout_marginBottom="10dp"
                android:paddingTop="20dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:textColorHighlight="#111"
                app:backgroundTint="#fff" />

        </com.google.android.material.textfield.TextInputLayout>


    <TextView
        android:id="@+id/bank6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name of Bank"
        android:layout_below="@+id/outlinedTextField3"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:textSize="18dp"
        android:textColor="#111"
        android:textStyle="bold"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/outlinedTextField4"
            android:theme="@style/EditTextThemeOverlay"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:hint="Enter Bank Name"
            android:textColorHint="#1396FD"
            app:helperText="Default helper"
            app:helperTextTextAppearance="@style/HelperTextAppearance"
            app:errorTextAppearance="@style/ErrorTextAppearance">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:singleLine="true"
                android:id="@+id/editTextUsername4"
                android:layout_height="70dp"
                android:layout_marginBottom="10dp"
                android:paddingTop="20dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:textColorHighlight="#111"
                app:backgroundTint="#fff" />

        </com.google.android.material.textfield.TextInputLayout>




        <Button
            android:id="@+id/CONFIRM"
            android:layout_width="match_parent"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#1396FD"
            android:layout_below="@+id/aadharnumber"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:text="CONFIRM"
            android:textSize="15dp" />


    </LinearLayout>

    </ScrollView>

</RelativeLayout>