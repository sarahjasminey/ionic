    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Personal Document"
        android:textColor="#111"
        android:fontFamily="serif"
        android:textSize="18dp"
        android:id="@+id/head1"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/view3"
        android:layout_below="@+id/head1"
        android:layout_marginRight="110dp"
        android:layout_marginLeft="110dp"
        android:background="#1B1919"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/aadharcard"
        android:text="Aadhar Card Proof"
        android:layout_below="@+id/head1"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:textSize="15dp"
        android:textColor="#111"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Mandatory1"
        android:text="Mandatory"
        android:layout_below="@+id/aadharcard"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:textSize="15dp"
        android:textColor="#1396FD"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/aadharlayout"
        android:layout_below="@+id/Mandatory1"
        android:weightSum="2">



        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:scaleType="fitXY"
            android:requestLegacyExternalStorage="true"
            android:id="@+id/aadharfrontimage"
            android:layout_below="@+id/Mandatory1"
           android:background="@drawable/cameraicon1"
            android:layout_weight="1">
        </ImageView>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_marginLeft="90dp"
            android:scaleType="fitXY"
            android:id="@+id/aadharbackimage"
           android:background="@drawable/cameraicon1"
            android:layout_below="@+id/Mandatory1"
            android:layout_weight="1"/>

    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Front Side"
        android:layout_below="@+id/aadharlayout"
        android:textColor="#111"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="55dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:id="@+id/backside"
        android:layout_marginRight="60dp"
        android:textColor="#111"
        android:text="Back Side"
        android:layout_below="@+id/aadharlayout"
        android:layout_marginTop="10dp" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/view1"
        android:layout_below="@+id/backside"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:background="#8F8989"
        />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pancard"
        android:text="PAN Card"
        android:layout_below="@+id/view1"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:textSize="15dp"
        android:textColor="#111"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/optional1"
        android:text="Optional"
        android:layout_below="@+id/pancard"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:textSize="15dp"
        android:textColor="#1396FD"/>


    <ImageView
        android:layout_width="140dp"
        android:layout_height="70dp"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:id="@+id/pancardimage"
        android:src="@drawable/cameraicon1"
        android:layout_below="@+id/view1" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:id="@+id/frontsidepan"
        android:layout_marginRight="60dp"
        android:textColor="#111"
        android:text="Front Side"
        android:layout_below="@+id/pancardimage"
        android:layout_marginTop="10dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/yourselfi"
        android:text="Your Selfi"
        android:layout_below="@+id/frontsidepan"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:textSize="15dp"
        android:textColor="#111"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Mandatory3"
        android:text="Optional"
        android:layout_below="@+id/yourselfi"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:textSize="15dp"
        android:textColor="#1396FD"/>


    <ImageView
        android:layout_width="140dp"
        android:layout_height="70dp"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:id="@+id/selfiimage"
        android:src="@drawable/cameraicon1"
        android:layout_below="@+id/frontsidepan" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/view2"
        android:layout_below="@+id/frontsidepan"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:background="#8F8989"
        />

    <Button
        android:id="@+id/sumbitt1"
        android:layout_width="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#1396FD"
        android:layout_below="@+id/frontsidepan"
        android:drawableRight="@drawable/arrow_forward"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:text="Sumbit"
        android:textSize="15dp" />




</RelativeLayout>