<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:id="@+id/Li1"
        android:layout_height="80dp"
        android:weightSum="2"
        >

        <TextView
            android:layout_width="20dp"
            android:layout_height="80dp"
            android:id="@+id/Nurse1"
            android:background="@drawable/shape"
            android:paddingTop="10dp"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:text="Nurse"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginLeft="30dp"
            android:paddingLeft="10dp"
            android:drawableTop="@drawable/medical"/>

            <TextView
                android:id="@+id/teacher1"
                android:layout_width="20dp"
                android:layout_height="80dp"
                android:paddingTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                android:background="@drawable/shape"
                android:drawableTop="@drawable/education"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:text="Teacher"
                android:textAllCaps="true"
                android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_below="@+id/Li1"
        android:layout_height="80dp"
        android:weightSum="2"
        >

            <TextView
                android:layout_width="20dp"
                android:layout_height="80dp"
                android:id="@+id/Gardener"
                android:background="@drawable/shape"
                android:paddingTop="10dp"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                android:text="Gardener"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginLeft="30dp"
                android:paddingLeft="10dp"
                android:drawableTop="@drawable/home_repair"/>
            <TextView
                android:layout_width="20dp"
                android:layout_height="80dp"
                android:id="@+id/Vegetable"
                android:background="@drawable/shape"
                android:paddingTop="10dp"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                android:text="Vegetable"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginLeft="30dp"
                android:paddingLeft="10dp"
                android:drawableTop="@drawable/medical"/>


    </LinearLayout>



</RelativeLayout>